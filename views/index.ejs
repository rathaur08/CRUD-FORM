<%- include('./partials/header.ejs') %>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-primary text-center">Add New Student</h2>

                <form method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter Full Name">
                    </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" class="form-control" id="age" name="age" placeholder="Enter Age">
                    </div>
                    <div class="mb-3">
                        <label for="fees" class="form-label">Fees</label>
                        <input type="text" class="form-control" id="fees" name="fees" placeholder="Enter Fees">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

            </div>
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-info text-center">List of Student</h2>
                <table class="table table-striped table-hover">
                    <thead>
                      <tr>
                        <th scope="col">SR.No</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Fees</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>

                    <% let i=1  %>
                    <% data.forEach((item)=>{ %> 
                      <tr>
                        <th> <%= i++ %> </th>
                        <td> <%= item.name  %> </td>
                        <td> <%= item.age  %> </td>
                        <td> <%= item.fees  %> </td>
                        <td>
                            <button type="update" class="btn btn-warning">UP</button>
                            <button type="delete" class="btn btn-danger">DEL</button>
                        </td>
                      </tr>
                    <% }) %> 

                    </tbody>
                  </table>
            </div>
        </div>
    </div>


    <!-- Footer Code -->
    <%- include('./partials/footer.ejs') %>